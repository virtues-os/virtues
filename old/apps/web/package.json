{
	"name": "ariata-web",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"dev:studio": "concurrently \"npm run dev\" \"npm run db:studio\"",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "biome format --write .",
		"lint": "biome check .",
		"lint:fix": "biome check --apply .",
		"generate:schemas": "cd ../.. && tsx scripts/generate-drizzle-schemas.ts",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "tsx scripts/migrate.ts",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio",
		"db:python": "tsx scripts/drizzle-to-python.ts && cd ../.. && (python3 scripts/generate_registry.py || python scripts/generate_registry.py)",
		"db:seed": "tsx scripts/seed.ts",
		"db:full-sync": "npm run generate:schemas && npm run db:generate && npm run db:push && npm run db:python",
		"registry:generate": "cd ../.. && (python3 scripts/generate_registry.py || python scripts/generate_registry.py)"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.5.0",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@sveltejs/vite-plugin-svelte-inspector": "^5.0.0",
		"@tailwindcss/forms": "^0.5.9",
		"@tailwindcss/typography": "^0.5.15",
		"@tailwindcss/vite": "^4.0.0",
		"@types/glob": "^9.0.0",
		"@types/js-yaml": "^4.0.9",
		"concurrently": "^9.2.0",
		"dotenv": "^17.2.0",
		"glob": "^11.0.3",
		"js-yaml": "^4.1.0",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.0",
		"ts-morph": "^26.0.0",
		"tsx": "^4.20.3",
		"typescript": "^5.0.0",
		"vite": "^6.2.6"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	},
	"dependencies": {
		"@ai-sdk/svelte": "^3.0.59",
		"@huggingface/inference": "^4.9.0",
		"@internationalized/date": "^3.8.2",
		"@sveltejs/adapter-node": "^5.2.13",
		"@tsparticles/engine": "^3.8.1",
		"@tsparticles/slim": "^3.8.1",
		"@tsparticles/svelte": "^3.1.1",
		"@types/d3": "^7.4.3",
		"@types/leaflet": "^1.9.20",
		"@types/marked": "^6.0.0",
		"@types/pg": "^8.15.4",
		"@xyflow/svelte": "^1.2.2",
		"ai": "^5.0.59",
		"cron-parser": "^5.3.0",
		"cronstrue": "^2.50.0",
		"d3": "^7.9.0",
		"drizzle-kit": "^0.31.4",
		"drizzle-orm": "^0.44.3",
		"iconify-icon": "^3.0.0",
		"ioredis": "^5.6.1",
		"leaflet": "^1.9.4",
		"marked": "^16.1.1",
		"minio": "^8.0.5",
		"motion": "^12.23.1",
		"pg": "^8.16.3",
		"postgres": "^3.4.7",
		"svelte-sonner": "^1.0.5",
		"tailwind-merge": "^3.3.1",
		"tsparticles": "^3.8.1",
		"zod": "^3.22.4"
	}
}